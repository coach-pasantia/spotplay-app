{
  "version": 2,
  "builds": [
      {
          "src": "backend/api/index.js",
          "use": "@now/node"
      }
  ],
  "routes": [
      {
        "src": "/api/v1/auth(.*)",
        "dest": "/api/index.js"
      },
      {
        "src": "/api/v1/user(.*)",
        "dest": "/api/index.js"
      },
      {
        "src": "/api/v1/song(.*)",
        "dest": "/api/index.js"
      },
      {
        "src": "/api/v1/docs(.*)",
        "dest": "/api/index.js"
      }
  ]
}
